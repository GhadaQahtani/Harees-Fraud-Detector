{
  "manifest_version": 3,
  "name": "Harees Fraud Detector",
  "version": "1.0",
  "description": "Real-time AI detection for Saudi websites.",

  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "scripting" 
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
